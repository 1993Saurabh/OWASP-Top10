
@{
    ViewBag.Title = "OwaspMvc - OWASP 2017";
}

@Html.AntiForgeryToken()

@{
    Response.Headers.Remove("X-Frame-Options");
}

<div class="jumbotron">
    <h2>OWASP Top 10 - 2017 for MVC</h2>
    <br/>
    <h4>How the security risks are listed?</h4>
